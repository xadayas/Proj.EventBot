@using System.Web.UI.WebControls
@model EventBot.Entities.Service.Models.EventModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <img src="/Images/View/@Html.Raw(Model.ImageId)" class="control-label col-md-12" id="EventImage" />
        </div>
        @Html.HiddenFor(model => model.ImageId)
        <hr/>
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Rubrik" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Beskrivning" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />



        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.MeetingPlace, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Plats" } })
                @Html.ValidationMessageFor(model => model.MeetingPlace, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Lägg till" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/CreateEvent.js"></script>
}
