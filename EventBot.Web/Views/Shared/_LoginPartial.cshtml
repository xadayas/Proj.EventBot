@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()


        <ul class="nav navbar-nav navbar-right">
            <li class="notifications">
                <a href="#">
                    <i class="glyphicon glyphicon-globe"></i>
                    <span class="badge js-notification-count hide"></span>
                </a>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName() <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("UserEvents", "Event")">Mina kommande aktiviteter</a></li>
                    <li><a href="@Url.Action("UserEvents", "Event")">Kommande aktiviterer jag skapat</a></li>
                    <li><a href="@Url.Action("Index", "Manage")">Konto inställningar</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Logga ut</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        <li><a href="/Account/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>

    
}
