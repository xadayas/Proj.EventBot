@using EventBot.Entities.Service.Models
@model EventBot.Web.IpLocation
<div class="my-fluid-container">
    <!-- Adds 15px left/right padding -->
    <div class="row">
        <!-- Adds -15px left/right margins -->
        <div>
            <div class="">
                <div class="row">
                    <div class="jumbotron text-center">
                        <h1 style="color: white"><span style="border:dashed; padding: 20px;">Event<i>al</i>.<i style="background:#ff5c47;color:white;">ly</i><br />
                            </span></h1>
                       
                       <a href="#" class="btn btn-primary btn-lg">Hitta händelser!</a>
                    </div>
                </div>
            </div>

            <div class="hot-events container">
                <div class="col-lg-12">
                    <h3 class="page-header">Evenemang nära @Model.city </h3>
                </div>
                <div class="row">
                    @{
                        var hotEvents = ViewData["HotEvents"] as IEnumerable<EventModel>;
                        if (hotEvents != null)
                        {
                            foreach (var hotEvent in hotEvents)
                            {
                                    <div class="col-lg-3 col-md-4 col-xs-6 thumb image" style="overflow: hidden;">
                                        <h2>// @hotEvent.Title</h2>
                                        <h2>
                                            @{
                                                foreach (var e in hotEvent.EventTypes)
                                                {
                                                    @e.Name
                                                }
                                            }
                                        </h2>
                                        <div style="width: 300px; height:300px; background: white;">

                                            <a class="thumbnail start-page-event" href="/event/details/@hotEvent.Id">
                                                <img class="img-responsive" src="/Images/View/@hotEvent.ImageId" style="max-width: 300px; max-height: 400px; width: auto; height: auto;" alt="@hotEvent.Title" />
                                            </a>
            
                                        </div>
                                </div>
                            }
                        }
                    }

                    @*
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a class="thumbnail" href="#">
            <img class="img-responsive" src="http://placehold.it/400x300" alt="" />
        </a>
    </div>*@
    
                </div>
            </div>
        </div>
    </div>
</div>



