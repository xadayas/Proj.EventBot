    ViewBag.Title = "title";
}


@using (Html.BeginForm("Upload", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <input type="file" name="file" accept=".png,.jpg" class="form-control inputfile"/>
            <label for="file">Välj bild</label>
        </div>
        <div class="form-group">
            <input type="submit" name="Submit" id="Submit" value="Ladda up" class="btn btn-default" />
        </div>
    </div>
}